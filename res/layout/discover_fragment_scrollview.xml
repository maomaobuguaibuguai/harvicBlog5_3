<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#EBEBEB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB" 
        android:paddingTop="20dp">

         <LinearLayout
            android:id="@+id/pengyouquan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/discover_header_pengyouquan"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="朋友圈"
                android:textSize="18sp" />
        </LinearLayout>
        
         <LinearLayout
             android:id="@+id/saoyisao"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_below="@+id/pengyouquan"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/discover_header_saoyisao"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_saoyisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="扫一扫"
                android:textSize="18sp" />
        </LinearLayout>
         <LinearLayout
             android:id="@+id/yaoyiyao"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:layout_below="@+id/saoyisao"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discover_header_yaoyiyao"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_yaoyiyao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="摇一摇"
                android:textSize="18sp" />
        </LinearLayout>
        
         <LinearLayout
             android:id="@+id/near_person"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_below="@+id/yaoyiyao"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/discover_header_near_person"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_near_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="附近的人"
                android:textSize="18sp" />
        </LinearLayout>
         <LinearLayout
             android:id="@+id/piaoliuping"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:layout_below="@+id/near_person"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discover_header_piaoliuping"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_piaoliuping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="漂流瓶"
                android:textSize="18sp" />
        </LinearLayout>
        
         <LinearLayout
             android:id="@+id/buying"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_below="@+id/piaoliuping"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/discover_header_buying"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_buying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="购物"
                android:textSize="18sp" />
        </LinearLayout>
         <LinearLayout
             android:id="@+id/youxi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:layout_below="@+id/buying"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discover_header_youxi"
                android:background="@drawable/pengyouquan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/discover_name_youxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="游戏"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>