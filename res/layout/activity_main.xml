<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" >

    
    
    

    <FrameLayout  
        android:id="@+id/id_content"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:layout_above="@+id/buttongroup" /> 
    <LinearLayout
        android:id="@+id/buttongroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8D8D8" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="5dp" >

            <RadioButton
                android:id="@+id/button_weixin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/button_weixin_select2"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textSize="10sp"
                android:textColor="@drawable/button_me_text_select2"></RadioButton>

            <RadioButton
                android:id="@+id/button_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/button_contact_select2"
                android:gravity="center_horizontal"
                android:text="通讯录" 
                android:textSize="10sp"
                android:textColor="@drawable/button_me_text_select2" />

            <RadioButton
                android:id="@+id/button_discover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/button_discover_select2"
                android:gravity="center_horizontal"
                android:text="发现" 
                android:textSize="10sp"
                android:textColor="@drawable/button_me_text_select2" />

            <RadioButton
                android:id="@+id/button_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/button_me_select"
                android:gravity="center_horizontal"
                android:text="我" 
                android:textSize="10sp"
                android:textColor="@drawable/button_me_text_select2" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>